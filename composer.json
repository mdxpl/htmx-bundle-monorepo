{
    "name": "mdxpl/htmx-bundle-monorepo",
    "description": "Monorepo for htmx-bundle and demo",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "rector/rector": "^2.3",
        "symplify/monorepo-builder": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "Mdxpl\\HtmxBundle\\": "packages/htmx-bundle/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mdxpl\\HtmxBundle\\Tests\\": "packages/htmx-bundle/tests/"
        }
    },
    "replace": {
        "mdxpl/htmx-bundle": "self.version"
    },
    "scripts": {
        "test": "cd packages/htmx-bundle && vendor/bin/phpunit",
        "test:bundle": "cd packages/htmx-bundle && vendor/bin/phpunit",
        "cs:check": "php-cs-fixer check",
        "cs:fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "analyse": "phpstan analyse",
        "rector": "rector process --dry-run",
        "rector:fix": "rector process",
        "fix": [
            "@rector:fix",
            "@cs:fix"
        ],
        "check": [
            "@phpstan",
            "@test"
        ],
        "pre-commit": [
            "@fix",
            "@check"
        ],
        "demo": "cd packages/demo && symfony serve",
        "demo:docker": "docker compose up --build",
        "demo:docker:stop": "docker compose down"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/runtime": true
        }
    }
}
