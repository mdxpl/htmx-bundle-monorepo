{
  "name": "mdxpl/htmx-bundle",
  "description": "HTMX support for Symfony",
  "license": "MIT",
  "type": "library",
  "keywords": ["htmx"],
  "authors": [
    {
      "name": "Mateusz Dołęga",
      "homepage": "https://mdx.pl"
    }
  ],
  "require": {
    "php": ">=8.2",
    "symfony/framework-bundle": "^6.4|^7.0",
    "symfony/twig-bundle": "^6.4|^7.0",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "friendsofphp/php-cs-fixer": "dev-master",
    "symfony/security-csrf": "^6.4|^7.0"
  },
  "suggest": {
    "symfony/security-csrf": "Required for CSRF protection (mdx_htmx.csrf.enabled: true)"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Mdxpl\\HtmxBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mdxpl\\HtmxBundle\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs": "php-cs-fixer fix --dry-run --diff",
    "cs-fix": "php-cs-fixer fix"
  }
}
