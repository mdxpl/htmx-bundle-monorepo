{
  "name": "mdxpl/htmx-bundle",
  "description": "HTMX support for Symfony",
  "license": "MIT",
  "type": "symfony-bundle",
  "keywords": ["htmx", "symfony"],
  "authors": [
    {
      "name": "Mateusz Dołęga",
      "homepage": "https://mdx.pl"
    }
  ],
  "require": {
    "php": ">=8.4",
    "symfony/framework-bundle": "^7.4",
    "symfony/twig-bundle": "^7.4",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "symfony/security-csrf": "^7.4",
    "symfony/form": "^7.4"
  },
  "suggest": {
    "symfony/security-csrf": "Required for CSRF protection (mdx_htmx.csrf.enabled: true)",
    "symfony/form": "Required for HtmxTypeExtension form integration"
  },
  "autoload": {
    "psr-4": {
      "Mdxpl\\HtmxBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mdxpl\\HtmxBundle\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
