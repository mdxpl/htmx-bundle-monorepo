{
    "name": "mdxpl/htmx-bundle-demo",
    "description": "Demo application for htmx-bundle",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.4",
        "symfony/framework-bundle": "^7.4",
        "symfony/twig-bundle": "^7.4",
        "symfony/form": "^7.4",
        "symfony/validator": "^7.4",
        "symfony/security-csrf": "^7.4",
        "symfony/runtime": "^7.4",
        "runtime/frankenphp-symfony": "^0.2",
        "mdxpl/htmx-bundle": "@dev",
        "symfony/asset": "^8.0"
    },
    "require-dev": {
        "symfony/web-profiler-bundle": "^8.0",
        "symfony/debug-bundle": "^7.4",
        "symfony/stopwatch": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../htmx-bundle",
            "options": {
                "symlink": true
            }
        }
    ],
    "scripts": {
        "start": "symfony serve",
        "start:php": "php -S localhost:8000 -t public"
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
