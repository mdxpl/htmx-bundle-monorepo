{% extends 'demo.html.twig' %}

{% set demo_title = 'Multi-Step Wizard Form' %}
{% set demo_description = 'A session-based multi-step form with schema versioning, validation per step, and error indicators on tabs.' %}
{% set demo_controller = 'WizardDemoController.php' %}
{% set demo_template = '_demo/wizard_demo.html.twig' %}

{% use '_demo/wizard_demo.html.twig' %}
{% set demo_csrf = true %}

{% block demo_styles %}
<style>
    .wizard-tabs {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--pico-muted-border-color);
        padding-bottom: 1rem;
    }
    .wizard-tab {
        padding: 0.5rem 1rem;
        border-radius: var(--pico-border-radius);
        cursor: pointer;
        text-decoration: none;
        font-size: 0.9rem;
    }
    .wizard-tab:hover { background: var(--pico-card-sectionning-background-color); }
    .wizard-tab.active {
        background: var(--pico-primary-background);
        color: var(--pico-primary-inverse);
    }
    .wizard-tab.has-error { color: var(--pico-del-color); }
    .wizard-tab.completed { color: var(--pico-ins-color); }
    .wizard-nav {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid var(--pico-muted-border-color);
    }
</style>
{% endblock %}

{% block demo %}
{{ block('_main') }}
{% endblock %}
